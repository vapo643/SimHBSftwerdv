# Environment Configuration Template - OWASP ASVS V14.1.1
# Copy this file to .env.development, .env.staging, or .env.production
# NEVER commit actual .env files with real values

# Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/simpix_dev
# For staging: STAGING_DATABASE_URL=
# For production: PROD_DATABASE_URL=

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-key
# For staging: STAGING_SUPABASE_URL=, STAGING_SUPABASE_ANON_KEY=, STAGING_SUPABASE_SERVICE_KEY=
# For production: PROD_SUPABASE_URL=, PROD_SUPABASE_ANON_KEY=, PROD_SUPABASE_SERVICE_KEY=

# Security Secrets (generate with: openssl rand -hex 32)
JWT_SECRET=change-this-in-production
CSRF_SECRET=change-this-in-production
SESSION_SECRET=change-this-in-production
# For staging: STAGING_JWT_SECRET=, STAGING_CSRF_SECRET=, STAGING_SESSION_SECRET=
# For production: PROD_JWT_SECRET=, PROD_CSRF_SECRET=, PROD_SESSION_SECRET=

# Frontend URL
FRONTEND_URL=http://localhost:3000
# For staging: STAGING_FRONTEND_URL=
# For production: PROD_FRONTEND_URL=

# Security Alerts
SECURITY_ALERT_EMAIL=security@example.com
# For staging: STAGING_ALERT_EMAIL=
# For production: PROD_ALERT_EMAIL=

# External Services (optional)
CLICKSIGN_API_KEY=
INTER_CLIENT_ID=
INTER_CLIENT_SECRET=
INTER_CERTIFICATE=

# Feature Flags (development defaults)
ENABLE_SECURITY_MONITORING=false
ENABLE_HONEYPOTS=false
ENABLE_OBFUSCATION=false
ENABLE_API_DOCS=true

# FASE 0 - Observability (Added 21/08/2025)
SENTRY_DSN=https://your-key@sentry.io/project-id
LOG_LEVEL=info
APP_VERSION=1.0.0

# Webhooks
CLICKSIGN_WEBHOOK_SECRET=your-webhook-secret-here
INTER_WEBHOOK_SECRET=your-webhook-secret-here

# Backup Configuration
BACKUP_CLOUD_BUCKET=backups
BACKUP_RETENTION_DAYS=7
